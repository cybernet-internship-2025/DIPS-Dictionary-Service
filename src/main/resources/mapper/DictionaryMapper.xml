<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="az.cybernet.internship.dictionary.mapper.DictionaryMapper">

    <select id="findById" resultType="az.cybernet.internship.dictionary.entity.DictionaryEntity" parameterType="int">
        SELECT * FROM dictionary WHERE id = #{id}
    </select>

    <select id="findAll" resultType="az.cybernet.internship.dictionary.entity.DictionaryEntity">
        SELECT * FROM dictionary
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="value != null and value != ''">
                AND value = #{value}
            </if>
            <if test="isActive != null">
                AND is_active = #{isActive}
            </if>
            <if test="limit != null">
                AND limit = #{limit}
            </if>
            <if test="id == null and isActive == null and value == null and limit == null">
                AND is_active = true
            </if>
        </where>
    </select>
    <insert id="insert" parameterType="az.cybernet.internship.dictionary.entity.DictionaryEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dictionary(word) VALUES(#{word})
    </insert>

    <update id="update" parameterType="az.cybernet.internship.dictionary.service.dto.DictionaryRequest">
        UPDATE dictionary SET word = #{word} WHERE id = #{id}
    </update>

    <update id="delete" parameterType="int">
        UPDATE dictionary SET is_active = false WHERE id = #{id}
    </update>

</mapper>
