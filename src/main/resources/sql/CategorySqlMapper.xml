<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.group_one.dictionary.dictionary_service.mapper.CategoryMapper">

    <resultMap id="CategoryWithItemsResultMap" type="az.cybernet.internship.dictionary.model.category.CategoryWithItemsDto">
        <id column="category_id" property="id"/>
        <result column="category_name" property="name"/>
        <result column="category_description" property="description"/>

        <collection property="items" ofType="az.cybernet.internship.dictionary.model.dictionary.DictionaryResponse">
            <id column="item_id" property="id"/>
            <result column="item_value" property="value"/>
            <result column="item_description" property="description"/>
            <result column="item_is_active" property="isActive"/>
        </collection>
    </resultMap>

    <!-- getAll -->
    <select id="getAll" resultType="az.cybernet.internship.dictionary.model.dictionary.Category">
        SELECT id, name, description
        FROM categories
    </select>

    <!-- getByIdWithItems -->
    <select id="getByIdWithItems" resultMap="CategoryWithItemsResultMap" resultType=" az.cybernet.internship.dictionary.model.category.CategoryWithItemsDto">
        SELECT
            c.id AS category_id,
            c.name AS category_name,
            c.description AS category_description,
            d.id AS item_id,
            d.value AS item_value,
            d.description AS item_description,
            d.is_active AS item_is_active
        FROM categories c
                 LEFT JOIN dictionary_items d ON d.category_id = c.id
        WHERE c.id = #{id}
    </select>

</mapper>
